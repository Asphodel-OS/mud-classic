{
  "name": "@mud-classic/std-client",
  "author": "Asphodel Studios",
  "description": "A standard framework for the MUD client.",
  "license": "MIT",
  "type": "module",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/Asphodel-OS/mud-classic.git",
    "directory": "packages/std-client"
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "pnpm build",
    "build": "tsup src/index.ts --format cjs,esm --dts-resolve --minify --clean --sourcemap --legacy-output",
    "dev": "tsup src/index.ts --format cjs,esm --dts-resolve --watch --sourcemap --legacy-output",
    "lint": "eslint . --ext .ts",
    "nuke": "rimraf node_modules/ dist/",
    "test": "tsc && jest --coverage --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/networks": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@mud-classic/network": "^0.0.2",
    "@mud-classic/recs": "^0.0.2",
    "@mud-classic/solecs": "^0.0.1",
    "@mud-classic/utils": "^0.0.1",
    "ethers": "^5.6.6",
    "lodash": "^4.17.21",
    "mobx": "^6.4.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.21",
    "@types/react": "^18.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "tslib": "^2.3.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "ethers": "^5.6.6",
    "lodash": "^4.17.21",
    "mobx": "^6.4.2",
    "react": "^18.2.0",
    "rxjs": "^7.5.5"
  },
  "publishConfig": {
    "access": "public"
  }
}