  "devDependencies": {
    "@types/react": "^18.0.12",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react-test-renderer": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}