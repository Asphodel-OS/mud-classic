{
  "name": "@mud-classic/react",
  "author": "Asphodel Studios",
  "description": "React tools for MUD client.",
  "license": "MIT",
  "type": "module",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/Asphodel-OS/mud-classic.git",
    "directory": "packages/react"
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
